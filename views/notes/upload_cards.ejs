<body>
    <h2>카드 일괄 등록</h2>
    <form action="/note/upload" method="post" enctype="multipart/form-data">

        <!-- 기존 수첩 선택 -->
        <label>저장할 수첩 선택</label>
        <select class="inputBox" name="note_id" id="noteSelect" required>
          <% notes.forEach(note => { %>
            <option value="<%= note.note_id %>"><%= note.title %></option>
          <% }) %>
        </select>
        <button class="btn" type="button" id="addNoteBtn">수첩 추가</button>

        <label>엑셀 업로드</label>
        <input type="file" name="excelFile" accept=".xlsx, .xls" required />

        <br>
        <button type="submit">업로드</button>
    </form>

    <!-- 팝업 (모달) -->
    <div id="noteModal" class="modal" style="display: none;">
        <div class="modal-content">
          <span class="close" id="closeModal" style="font-family: sans-serif;">&times;</span>
      
          <form id="noteForm">
            <input class="inputBox" id="title" name="title" type="text" placeholder="제목" required />
          
            <label for="template">템플릿</label>
            <select class="inputBox" id="template" name="template" required>
              <option value="filp">플립</option>
              <option value="text">텍스트 박스</option>
              <option value="split">분할</option>
            </select>
        
            <button class="btn" type="submit">생성</button>
          </form>
        </div>
    </div> 
  </body>