<div class="folder-grid">
  <% if (notes && notes.length > 0) { %>
    <% notes.forEach(note => { %>
      <div class="folder-item" id="<%= note.note_id %>">
        <a class="folder-link" href="/cards_<%= note.template %>?note_id=<%= note.note_id %>">
          <img src="/images/folder.jpg" alt="폴더">
        </a>
        
        <!-- 제목 텍스트 영역 -->
        <span class="note-title" title="<%= note.title %>" data-id="<%= note.note_id %>" data-title="<%= note.title %>">
          <%= note.title.length > 5 ? note.title.substring(0, 5) + '...' : note.title %>
        </span>
      </div>
    <% }) %>
  <% } else { %>
  </div>
  <p>노트가 없습니다.</p>
  <% } %>